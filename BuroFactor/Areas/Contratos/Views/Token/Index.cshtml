
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/libs/angular.js"></script>
    <script src="~/Scripts/controller/Rootapp.js"></script>
    <script src="~/Scripts/libs/Eventos.js"></script>
    <script src="~/Home/RootPath"></script>
</head>
</head>
<body ng-app="BuroFactor">
    <div ng-controller="ctrlToken"> 

        <form ng-submit="validateToken()">
            <div class="form-group">
                <label class="control-label col-md-2">RFC</label>
                <input type="text" ng-model="data.rfc" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Contraseña</label>
                <input type="text" ng-model="data.contrasena" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Repite la Contraseña</label>
                <input type="password" ng-model="data.validacionContrasena" />
            </div>
            <input type="submit" />Validar
        </form>
    </div>

    <script src="~/Scripts/factory/ValidationTokenFactory.js"></script>
    <script src="~/Scripts/controller/ctrlToken.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>
